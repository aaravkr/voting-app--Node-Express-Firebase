<% var keys = Object.keys(restaurants) %>

<% console.log('the ARRAY keys ', keys) %>
<% console.log('the restaurants ', restaurants) %>

<% keys.forEach(function(key){  %>


  
  <% var alluser %>
  <% if(restaurants[key].votes){ %>
    <% alluser = Object.keys(restaurants[key].votes) %>
    <% } else { %>
      <% alluser = [] %>
      <% } %>



    <div class="col s6 m6 l6">
            <div class="card blue-grey darken-1">
              <div class="card-content white-text">
                <span class="card-title"><%= restaurants[key].name %></span>
                <p>votes : <%= alluser.length %></p>
              </div>
              <div class="card-action">
              <button onclick={upvote("<%= key %>")} class="btn"><a>Upvote</a></button>
              <button onclick={downvote("<%= key %>")} class="btn"><a>Downvote</a></button>
              </div>
            </div>
          </div>
 
<% })%>
